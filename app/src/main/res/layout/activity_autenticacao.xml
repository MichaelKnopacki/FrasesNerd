<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AutenticacaoActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/cinza">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/frases"
        android:layout_marginBottom="20dp"/>


    <EditText
        android:id="@+id/edtCadastroEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/btg_custom"
        android:hint="E-mail"
        android:padding="16dp" />

    <EditText
        android:id="@+id/edtCadastroSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/btg_custom"
        android:hint="Senha"
        android:layout_marginTop="-2dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnAcessar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btg_custom"
        android:onClick="acessar"
        android:padding="16dp"
        android:text="Acessar" />

    <TextView
        android:id="@+id/txtRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:onClick="cadastrar"
        android:text="Registrar"
        android:textColor="@color/branco" />


    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_facebook"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_facebook"
            android:layout_width="24sp"
            android:layout_height="24sp"/>
        <ImageView
            android:id="@+id/ic_twitter"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_twitter"
            android:layout_weight="1"
            android:layout_width="24sp"
            android:layout_height="24sp"/>
        <ImageView
            android:id="@+id/ic_gmail"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_gmail"
            android:layout_weight="1"
            android:layout_width="24sp"
            android:layout_height="24sp"/>
        <ImageView
            android:id="@+id/ic_instagram"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_instagram"
            android:layout_weight="1"
            android:layout_width="24sp"
            android:layout_height="24sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtEsqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:textColor="@color/branco"
        android:layout_marginTop="30dp"/>

</LinearLayout>